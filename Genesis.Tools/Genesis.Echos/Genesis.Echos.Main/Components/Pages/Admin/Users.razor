@page "/admin/users"
@using Genesis.Echos.Domain.Entities
@using Genesis.Echos.Domain.Enums
@using Genesis.Echos.Main.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@rendermode InteractiveServer

<PageTitle>ユーザー管理</PageTitle>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">管理画面</h2>
    </div>

    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <span class="nav-link active" style="cursor: default;">ユーザー管理</span>
        </li>
        <li class="nav-item">
            <span class="nav-link" style="cursor: pointer;" @onclick='() => NavigationManager.NavigateTo("/admin/posts")'>投稿管理</span>
        </li>
    </ul>

    @if (users == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">読み込み中...</span>
            </div>
        </div>
    }
    else if (!users.Any())
    {
        <div class="alert alert-info">ユーザーが見つかりません。</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>メールアドレス</th>
                        <th>ロール</th>
                        <th>作成日</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in users)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge @GetRoleBadgeClass(user.Role)">
                                    @GetRoleDisplayName(user.Role)
                                </span>
                            </td>
                            <td>@user.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</td>
                            <td>
                                @if (user.Role != UserRole.Admin)
                                {
                                    <div class="btn-group btn-group-sm" role="group">
                                        @if (user.Role != UserRole.Leader)
                                        {
                                            <button class="btn btn-outline-primary"
                                                    @onclick="() => ChangeRole(user.Id, UserRole.Leader)">
                                                リーダーに変更
                                            </button>
                                        }
                                        @if (user.Role != UserRole.Member)
                                        {
                                            <button class="btn btn-outline-secondary"
                                                    @onclick="() => ChangeRole(user.Id, UserRole.Member)">
                                                ゲストに変更
                                            </button>
                                        }
                                        <button class="btn btn-outline-danger"
                                                @onclick="() => DeleteUser(user.Id, user.Email!)">
                                            削除
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">操作不可</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger mt-3">@errorMessage</div>
    }
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success mt-3">@successMessage</div>
    }
</div>
